<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/corner_grey_round"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Test friend"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:text="9716924744"
            android:textSize="@dimen/text_12" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_request_reject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/corner_btn_red"
        android:gravity="center"
        android:padding="5dp"
        android:text="REJECT"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/txt_request_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/corner_btn_green"
        android:gravity="center"
        android:padding="5dp"
        android:text="ACCEPT"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/text_12" />

</LinearLayout>

